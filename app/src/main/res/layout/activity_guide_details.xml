<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuideDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleEnabled="false"
                app:sliderCircularHandlerEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="1"
                app:sliderStartAutoCycle="false" />

            <Button
                android:id="@+id/contactButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="Contact"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLightGray"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>

            <ImageView
                android:id="@+id/quoteTopImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="10dp"
                android:rotation="180"
                android:scaleX="2"
                android:scaleY="2"
                app:srcCompat="@drawable/ic_quote_gray_24dp" />

            <TextView
                android:id="@+id/quoteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Some inspirational quote..."
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/quoteBottomImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:scaleX="2"
                android:scaleY="2"
                app:srcCompat="@drawable/ic_quote_gray_24dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLightGray"
                android:layout_marginTop="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorVeryLightGray">
                <TextView
                    android:id="@+id/showHeaderTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We Will See These Places"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:layout_margin="15dp"/>
                <TextView
                    android:id="@+id/showTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I love Istanbul. I love Istanbul. I love Istanbul. I love Istanbul. I love Istanbul. I love Istanbul."
                    android:textStyle="normal"
                    android:layout_margin="15dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLightGray"/>
                <TextView
                    android:id="@+id/aboutHeaderTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About Me"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:layout_margin="15dp"/>
                <TextView
                    android:id="@+id/aboutTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I was born in Istanbul and I still live in this beautiful city. I am an industrial engineer who is obsessed with marketing :)"
                    android:textStyle="normal"
                    android:layout_margin="15dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLightGray"/>

                <TextView
                    android:id="@+id/languageHeaderTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Languages"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:layout_margin="15dp"/>
                <TextView
                    android:id="@+id/languageTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Turkish\nEnglish\nSpanish"
                    android:textStyle="normal"
                    android:layout_margin="15dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLightGray"/>

                <TextView
                    android:id="@+id/activitiesHeaderTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Activities"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:layout_margin="15dp"/>
                <TextView
                    android:id="@+id/activitiesTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Translation\nShopping\nFood &amp; Restaurants\Art &amp; Museums\nHistory &amp; Culture\nExploration &amp; Sightseeing"
                    android:textStyle="normal"
                    android:layout_margin="15dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLightGray" />

            <TextView
                android:id="@+id/reviewHeaderTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="56 Reviews"
                android:textStyle="bold"
                android:layout_margin="15dp"/>


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>