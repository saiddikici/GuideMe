<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/reviewProfilePicture"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="24dp"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        android:src="@drawable/profilepic"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="7dp">

            <TextView
                android:id="@+id/rNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simon"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/asTravelerTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" as a traveler"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>


        <TextView
            android:id="@+id/reviewTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Great tour, lots of fun!"/>

        <RatingBar
            android:id="@+id/reviewRatingBar"
            style="@android:style/Widget.Holo.Light.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="3.0"
            android:stepSize="1.0"/>

    </LinearLayout>

</LinearLayout>